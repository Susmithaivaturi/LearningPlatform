doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Dashboard - Online Learning Platform
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
    style.
      /* Custom styling for the courses list */
      .course-list {
        max-height: 300px; /* Limit height */
        overflow-y: auto; /* Enable scrolling */
      }

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      h2.navbar-brand LearnEasy
      button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href="/dashboard") Dashboard
          li.nav-item
            a.nav-link(href="/courses") Courses
          li.nav-item
            a.nav-link(href="/logout") Logout

    // Main Content
    main.container.my-5
      h2.mt-4.text-center Welcome!!
      .d-flex.justify-content-center.mt-4
        // Profile Section
        section#profile.col-md-5.mb-4
          .card
            .card-body
              h5.card-title.text-center Your Profile
              p.card-text
                strong Name: 
                span= name 
              p.card-text
                strong Email: 
                span= email 

      .row.mt-4
        // Enrolled Courses Section
        section#courses.col-md-6.mb-4
          .card
            .card-body
              h5.card-title.text-center Enrolled Courses
              .course-list.list-group.list-group-flush
                a.list-group-item.list-group-item-action(href="https://www.youtube.com/watch?v=tVzUXW6siu0&list=PLu0W_9lII9agq5TrH9XLIKQvv0iaF2X3w") Course 1 - Introduction to Web Development
                a.list-group-item.list-group-item-action(href="https://www.youtube.com/watch?v=-6RqxhNO2yY") Course 2 - Data Science with Python
                a.list-group-item.list-group-item-action(href="https://www.youtube.com/watch?v=mNB8NlwhAgg&list=PLmAmHQ-_5ySyQeEryrlomrEvOGNYN3TAL") Course 3 - Machine Learning Basics

        // Progress Section
        section#progress.col-md-6.mb-4
          .card
            .card-body
              h5.card-title.text-center Your Progress
              p.card-text You have completed 2 out of 3 courses.
              p.card-text Keep up the great work!

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
