doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up - Online Learning Platform
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      h2.navbar-brand LearnEasy
      button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/login") Login

    // Signup Form Section
    .container.d-flex.justify-content-center.align-items-center
      .card.shadow(style="width: 28rem; margin-top: 40px;")
        .card-body
          h5.card-title.text-center Create an Account
          form(action="/signup", method="POST")
            .mb-3
              label.form-label(for="name") Full Name
              input.form-control(type="text", name="name", id="name", placeholder="Enter your name", required=true)
            .mb-3
              label.form-label(for="email") Email address
              input.form-control(type="email", name="email", id="email", placeholder="Enter email", required=true)
            .mb-3
              label.form-label(for="password") Password
              input.form-control(type="password", name="password", id="password", placeholder="Create a password", required=true)
            .mb-3
              label.form-label(for="confirmPassword") Confirm Password
              input.form-control(type="password", id="confirmPassword", placeholder="Re-enter your password", required=true)
            button.btn.btn-primary.w-100(type="submit") Sign Up
          p.text-center.mt-3 Already have an account? 
            a(href="/login") Login here

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
