doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login - Online Learning Platform
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      h2.navbar-brand LearnEasy
      button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/signup") Register

    // Login Form Section
    .container.d-flex.justify-content-center.align-items-center
      .card.shadow(style="width: 25rem; margin-top: 90px;")
        .card-body
          h5.card-title.text-center Login to LearnEasy
          form(action="/login", method="POST")
            .mb-3
              label.form-label(for="email") Email address
              input.form-control(type="email", name="email", id="email", placeholder="Enter email", required=true)
            .mb-3
              label.form-label(for="password") Password
              input.form-control(type="password", name="password", id="password", placeholder="Password", required=true)
            button.btn.btn-primary.w-100(type="submit") Login
          p.text-center.mt-3 Don't have an account? 
            a(href="/signup") Register here

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
