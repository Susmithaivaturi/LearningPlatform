  doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title All Courses - Online Learning Platform
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      h2.navbar-brand LearnEasy
      button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href="/dashboard") Dashboard
          li.nav-item
            a.nav-link(href="/courses") Courses
          li.nav-item
            a.nav-link(href="/logout") Logout

    // Courses Section
    .container.mt-5
      h2.text-center.mb-4 Available Courses
      .row
        // Course Card 1
        .col-md-4.mb-4
          .card
            img.card-img-top(src="/images/webDevelopment.png", alt="Course Image")
            .card-body
              h5.card-title Introduction to Web Development
              p.card-text Learn the basics of web development with HTML, CSS, and JavaScript.
              a.btn.btn-primary(href="https://www.youtube.com/watch?v=tVzUXW6siu0&list=PLu0W_9lII9agq5TrH9XLIKQvv0iaF2X3w") Enroll

        // Course Card 2
        .col-md-4.mb-4
          .card
            img.card-img-top(src="/images/dataScience.png", alt="Course Image")
            .card-body
              h5.card-title Data Science with Python
              p.card-text Dive into data analysis and visualization using Python.
              a.btn.btn-primary(href="https://www.youtube.com/watch?v=-6RqxhNO2yY") Enroll

        // Course Card 3
        .col-md-4.mb-4
          .card
            img.card-img-top(src="/images/machineLearning.png", alt="Course Image")
            .card-body
              h5.card-title Machine Learning Basics
              p.card-text Understand the fundamentals of machine learning algorithms.
              a.btn.btn-primary(href="https://www.youtube.com/watch?v=mNB8NlwhAgg&list=PLmAmHQ-_5ySyQeEryrlomrEvOGNYN3TAL") Enroll

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")

